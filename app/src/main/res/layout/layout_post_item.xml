        <ImageView
            android:id="@+id/imgSinglePreview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/btnReadMore"
            app:layout_goneMarginTop="16dp"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvImagePreview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/imgSinglePreview"
            android:nestedScrollingEnabled="false"
            app:layout_goneMarginTop="16dp"
            android:visibility="gone">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tvLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text=""
            app:layout_constraintBottom_toTopOf="@id/btnPostLike"
            app:layout_constraintStart_toStartOf="@+id/tvPostContent"
            app:layout_constraintTop_toBottomOf="@id/rcvImagePreview" />

        <TextView
            android:id="@+id/tvCmtCount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/tvLikeCount"
            app:layout_constraintEnd_toEndOf="@+id/tvPostContent"
            app:layout_constraintTop_toTopOf="@+id/tvLikeCount" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btnPostLike"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:letterSpacing="0.01"
            android:text="Like"
            android:textAllCaps="false"
            android:textColor="@color/colorTextFieldInput"
            app:backgroundTint="@android:color/white"
            app:cornerRadius="0dp"
            app:icon="@drawable/ic_like"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:iconTint="@color/colorTextFieldInput"
            app:layout_constraintEnd_toStartOf="@id/btnPostComment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLikeCount" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btnPostComment"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:letterSpacing="0.01"
            android:text="Comment"
            android:textAllCaps="false"
            android:textColor="@color/colorTextFieldInput"
            app:backgroundTint="@android:color/white"
            app:cornerRadius="0dp"
            app:icon="@drawable/ic_comment"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:iconTint="@color/colorTextFieldInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnPostLike"
            app:layout_constraintTop_toBottomOf="@id/tvLikeCount" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            app:layout_constraintTop_toTopOf="@id/btnPostLike" />

        <android.support.v7.widget.RecyclerView
