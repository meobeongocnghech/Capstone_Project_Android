<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/colorDefaultBackground"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imgPostAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_default"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPostUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="User"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/tvTime"
            app:layout_constraintStart_toEndOf="@+id/imgPostAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/separator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_play_arrow_16dp"
            app:layout_constraintBottom_toBottomOf="@id/tvPostUserName"
            app:layout_constraintStart_toEndOf="@id/tvPostUserName"
            app:layout_constraintTop_toTopOf="@id/tvPostUserName" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="20 m"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/imgPostAvatar"
            app:layout_constraintStart_toStartOf="@id/tvPostUserName"
            app:layout_constraintTop_toBottomOf="@id/tvPostUserName" />

        <TextView
            android:id="@+id/tvPostCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:text="Chuyên mục khác"
            android:textColor="@color/colorTextFieldInput"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/separator"
            app:layout_constraintTop_toTopOf="@id/tvPostUserName"
            app:layout_constraintEnd_toStartOf="@id/btnPostOption"
            android:layout_marginRight="16dp"/>

        <ImageButton
            android:id="@+id/btnPostOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_vstyle_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPostUserName" />

        <TextView
            android:id="@+id/tvPostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-medium"
            android:text="Lorem ipsum dolor"
            android:textColor="@color/colorTextFieldInput"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tvPostContent"
            app:layout_constraintTop_toBottomOf="@id/imgPostAvatar" />

        <TextView
            android:id="@+id/tvPostContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="@string/pseudo_para"
            android:textColor="@color/colorTextFieldInput"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvPostTitle" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btnReadMore"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.01"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="Xem thêm"
            android:textColor="#888"
            android:textSize="14sp"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@id/tvPostContent"
            app:layout_constraintTop_toBottomOf="@id/tvPostContent"
            app:rippleColor="@android:color/transparent"
            app:textAllCaps="false" />

