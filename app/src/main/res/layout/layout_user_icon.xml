<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="6dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="3dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:id="@+id/imgAvtItem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/avatar_default"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                card_view:layout_constraintStart_toEndOf="@id/imgAvtItem"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tvNameItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGenderItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="----"
                    android:textColor="@color/colorLightGray"
                    android:textSize="10dp" />
            </LinearLayout>

            <android.support.design.button.MaterialButton
                android:id="@+id/imgPhoneCall"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                card_view:cornerRadius="16dp"
                card_view:icon="@drawable/ic_local_phone_primary_24dp"
                card_view:iconTint="@color/colorPrimary"
                card_view:backgroundTint="@color/colorWhite"
                card_view:rippleColor="@color/colorPrimary"
                card_view:layout_constraintEnd_toStartOf="@+id/imgApproveRequest"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"/>

            <android.support.design.button.MaterialButton
                android:id="@+id/imgApproveRequest"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                card_view:cornerRadius="16dp"
                card_view:icon="@drawable/ic_check_black_24dp"
                card_view:iconTint="#4aedc5"
                card_view:backgroundTint="@color/colorWhite"
                card_view:rippleColor="#4aedc5"
                card_view:layout_constraintEnd_toStartOf="@+id/imgInviteState"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"/>

            <android.support.design.button.MaterialButton
                android:id="@+id/imgInviteState"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                card_view:cornerRadius="16dp"
                card_view:icon="@drawable/ic_clear_red_24dp"
                card_view:iconTint="#f00"
                card_view:backgroundTint="@color/colorWhite"
                card_view:rippleColor="#f00"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>