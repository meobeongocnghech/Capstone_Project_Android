<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginLeft="16dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/imgSearchAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_default"/>
    <TextView
        android:id="@+id/tvSearchUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextFieldInput"
        android:text="Nguyen The Linh"
        app:layout_constraintTop_toTopOf="@id/imgSearchAvatar"
        app:layout_constraintBottom_toTopOf="@id/tvSearchEmail"
        app:layout_constraintLeft_toRightOf="@id/imgSearchAvatar"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"/>
    <TextView
        android:id="@+id/tvSearchEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HQA@mta.com"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tvSearchUsername"
        app:layout_constraintBottom_toBottomOf="@id/imgSearchAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvSearchUsername"
        />
</android.support.constraint.ConstraintLayout>