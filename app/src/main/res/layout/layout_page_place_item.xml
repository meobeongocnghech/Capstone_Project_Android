<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constrainPlaceItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/imgPlaceCover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorDefaultBackground"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:translationY="30dp"
            android:transitionName="placeImg"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:layout_width="32dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgPlaceCover"
            app:layout_constraintBottom_toBottomOf="@id/imgPlaceCover"
            android:background="@android:color/white"/>

        <View
            android:layout_width="32dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgPlaceCover"
            app:layout_constraintBottom_toBottomOf="@id/imgPlaceCover"
            android:background="@android:color/white"/>

        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgPlaceCover"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/white"/>

        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imgPlaceCover"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/white"
            android:translationY="16dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="@id/tvPlaceName"
            app:layout_constraintBottom_toBottomOf="@id/tvPlaceName"/>

        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/imgPlaceCover"/>


        <TextView
            android:id="@+id/tvPlaceAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_address"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:paddingVertical="4dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceName"/>

        <TextView
            android:id="@+id/tvPlaceDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_distance"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:paddingVertical="4dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceAddress"/>

        <TextView
            android:id="@+id/tvPlaceTotalPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_backpack"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:paddingVertical="4dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceDistance" />

        <TextView
            android:id="@+id/tvPlaceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="16dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="8dp"
            android:background="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceTotalPlan" />

    </android.support.constraint.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:shimmer_duration="1200"
        app:shimmer_base_color="#eeeeee"
        app:shimmer_highlight_color="#EFEFEF">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgPlaceCoverHolder"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:background="@color/colorViewHolder"
                android:scaleType="centerCrop"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:translationY="30dp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@id/imgPlaceCoverHolder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgPlaceCoverHolder" />

            <View
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@id/imgPlaceCoverHolder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgPlaceCoverHolder" />

            <View
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgPlaceCoverHolder" />

            <View
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:background="@android:color/white"
                android:translationY="16dp"
                app:layout_constraintBottom_toBottomOf="@id/imgPlaceCoverHolder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/tvPlaceNameHolder"
                app:layout_constraintBottom_toBottomOf="@id/tvPlaceAddressHolder"/>

            <TextView
                android:id="@+id/tvPlaceNameHolder"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorViewHolder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgPlaceCoverHolder" />

            <TextView
                android:id="@+id/tvPlaceAddressHolder"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorViewHolder"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPlaceNameHolder" />

            <TextView
                android:id="@+id/tvPlaceDistanceHolder"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:background="@color/colorViewHolder"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPlaceAddressHolder" />

            <TextView
                android:id="@+id/tvPlaceTotalPlanHolder"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@color/colorViewHolder"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPlaceDistanceHolder" />

            <TextView
                android:id="@+id/tvPlaceDescriptionHolder"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="8dp"
                android:background="@color/colorViewHolder"
                android:lineSpacingExtra="4dp"
                android:maxLines="4"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvPlaceTotalPlanHolder" />

        </android.support.constraint.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</RelativeLayout>