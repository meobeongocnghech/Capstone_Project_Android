<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="fitXY"
            android:src="@drawable/cover_1"

            android:alpha="0.8" />

        <include layout="@layout/toolbar_profile_edit" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgAvtEdit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/avatar_default"
            app:view_borderColor="#cccccc"
            app:view_borderWidth="2dp"
            app:view_shadowDx="2dp"
            app:view_shadowDy="0dp"
            app:view_shadowRadius="2dp" />

        <com.viettrekker.mountaintrekkingadviser.animator.TextView_Lato
            android:id="@+id/tvEditAvt"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/roun_rect_lightgray"
            android:text="Sửa"
            android:textAlignment="center"
            android:textColor="@color/colorGray"
            android:textSize="15sp"
            android:textStyle="bold" />


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <com.viettrekker.mountaintrekkingadviser.animator.MyTextView
         android:layout_width="0dp"
         android:layout_weight="0.3"
         android:layout_height="wrap_content"
         android:text="Email"
         android:textSize="14dp"
         android:layout_marginLeft="5dp"
         android:padding="15dp"/>

        <TextView
            android:id="@+id/tvEmailEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="16dp"
            android:text="cuongdv@mta.com"
            android:textAlignment="textEnd" />





    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.viettrekker.mountaintrekkingadviser.animator.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Tên"
            android:textSize="14dp"
            android:padding="15dp"
            android:layout_marginLeft="5dp"/>


        <com.viettrekker.mountaintrekkingadviser.animator.MyEditText
            android:id="@+id/edtFirstNameEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:hint="Tên"
            android:padding="15dp"
            android:textAlignment="textEnd"
            android:textSize="14dp" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.viettrekker.mountaintrekkingadviser.animator.MyTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Họ"
        android:textSize="14dp"
        android:padding="15dp"
        android:layout_marginLeft="5dp"/>

        <com.viettrekker.mountaintrekkingadviser.animator.MyEditText
            android:id="@+id/edtLastNameEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:hint="Họ"
            android:padding="15dp"
            android:textAlignment="textEnd"
            android:textSize="14dp" />


</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.viettrekker.mountaintrekkingadviser.animator.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Điện thoại"
            android:textSize="14dp"
            android:padding="15dp"
            android:layout_marginLeft="5dp"/>

        <com.viettrekker.mountaintrekkingadviser.animator.MyEditText
            android:id="@+id/edtPhoneEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:hint="Số điện thoại"
            android:padding="15dp"
            android:textAlignment="textEnd"
            android:textSize="14dp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.viettrekker.mountaintrekkingadviser.animator.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Sinh nhật"
            android:textSize="14dp"
            android:padding="15dp"
            android:layout_marginLeft="5dp"/>

        <com.viettrekker.mountaintrekkingadviser.animator.MyEditText
            android:id="@+id/edtDOBEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:hint="dd/MM/yyyy"
            android:padding="15dp"
            android:textAlignment="textEnd"
            android:textSize="14dp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.viettrekker.mountaintrekkingadviser.animator.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:padding="15dp"
            android:text="Giới tính"
            android:textSize="14dp" />

        <Spinner
            android:id="@+id/spnGenderEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>

</LinearLayout>
