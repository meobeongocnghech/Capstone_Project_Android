<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ForgotPasswordActivity"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/forgotPasswordToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="Quên mật khẩu"
        app:titleTextColor="@android:color/white"
        android:theme="@style/Toolbar">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập địa chỉ email tài khoản của bạn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPasswordToolbar"
        android:layout_marginLeft="36dp"/>

    <EditText
        android:id="@+id/edtChangePwdEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:hint="Địa chỉ email"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHint" />

    <android.support.design.card.MaterialCardView
        android:id="@+id/cardUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_goneMarginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edtChangePwdEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="false"
        android:visibility="gone">
        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/avatar_default" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/avatar"
                app:layout_constraintBottom_toTopOf="@id/mail"
                app:layout_constraintStart_toEndOf="@id/avatar"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorTextFieldInput"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintBottom_toBottomOf="@id/avatar"
                app:layout_constraintStart_toEndOf="@id/avatar"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorTextFieldInput" />
        </android.support.constraint.ConstraintLayout>
    </android.support.design.card.MaterialCardView>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/keyLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        app:layout_goneMarginTop="20dp"
        android:layout_marginRight="36dp"
        android:textColorHint="@color/colorTextFieldLabel"
        android:transitionGroup="true"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:hintTextAppearance="@style/TextInputLayoutStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardUser"
        app:errorTextAppearance="@style/ErrorStyle"
        android:visibility="gone">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorGreyHint"
            android:hint="Mã xác nhận"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorTextFieldInput"
            android:textCursorDrawable="@drawable/input_cursor"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/pwdLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="36dp"
        android:textColorHint="@color/colorTextFieldLabel"
        android:transitionGroup="true"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:hintTextAppearance="@style/TextInputLayoutStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyLayout"
        app:errorTextAppearance="@style/ErrorStyle"
        app:helperTextEnabled="true"
        app:helperText="@string/helper_password"
        android:visibility="gone">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorGreyHint"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorTextFieldInput"
            android:textCursorDrawable="@drawable/input_cursor"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.button.MaterialButton
        android:id="@+id/btnForgotAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_goneMarginTop="16dp"
        android:minHeight="0px"
        android:minWidth="0px"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Tìm"
        android:textAllCaps="false"
        android:letterSpacing="0.01"
        android:layout_marginLeft="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pwdLayout" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập lại"
        android:minHeight="0px"
        android:minWidth="0px"
        android:textAllCaps="false"
        android:letterSpacing="0.01"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/btnForgotAction"
        app:layout_constraintStart_toEndOf="@id/btnForgotAction"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>