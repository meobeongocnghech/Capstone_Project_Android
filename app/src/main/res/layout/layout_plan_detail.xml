<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/imgBackIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrow_back_green"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Chi tiết lịch trình"
            android:textColor="#b2b9c6"
            app:layout_constraintEnd_toStartOf="@+id/btnEditablePlan"
            app:layout_constraintStart_toEndOf="@+id/imgBackIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btnEditablePlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:insetTop="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:text="Sửa"
            android:textAllCaps="false"
            android:textColor="@color/colorGray"
            android:textSize="16sp"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPlanName" />

    </android.support.constraint.ConstraintLayout>
    <View
        android:id="@+id/viewBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="#99A1AC"
        app:layout_constraintTop_toBottomOf="@+id/layoutActionBar"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/llPlanDetail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/layoutActionBar">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/gree_circle" />

            <View
                android:id="@+id/view4"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginLeft="9dp"
                android:background="@color/colorDisable" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location_on" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStartPlace"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/opensans_bold"
            android:maxLines="3"
            android:text="Ha Noi"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEndPlace"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/opensans_bold"
            android:maxLines="3"
            android:text="Tam Dao"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toEndOf="@+id/linearLayout" />
    </android.support.constraint.ConstraintLayout>
    <View
        android:id="@+id/viewFirst"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="#99A1AC"
        app:layout_constraintTop_toBottomOf="@+id/llPlanDetail"/>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewFirst">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDateStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu,10 Nov"
                        android:textColor="@color/colorGray"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tvTimeStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="--:--"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Khởi hành"
                        android:textColor="@color/colorGray"
                        android:textSize="10dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDurationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="--------"
                        android:textColor="#E63C2E"
                        android:textSize="11dp" />
                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa rõ"
                        android:textSize="9.5dp"
                        android:textColor="@color/colorGray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDateEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu,10 Nov"
                        android:textColor="@color/colorGray"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tvTimeEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="--:--"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Kết thúc"
                        android:textColor="@color/colorGray"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#cccdce"/>

            <RelativeLayout
                android:id="@+id/layoutViewMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:clipToPadding="false"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvMember"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành viên ▼"
                    android:layout_marginLeft="14dp"
                    android:textSize="13.5dp"
                    android:textColor="@color/colorGray"/>
                <TextView
                    android:id="@+id/tvMemberCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:text="1 người"/>
                <ImageView
                    android:id="@+id/imgAddMember"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_add_circle_primary"/>

            </RelativeLayout>

            <View
                android:id="@+id/viewMember"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#cccdce"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvListMembersPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/layoutOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="Trạng thái"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorGray"
                    android:textSize="13.5dp" />

                <TextView
                    android:id="@+id/tvStatePlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="13dp"
                    android:layout_alignParentEnd="true"
                    android:text="Sẵn sàng"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutCayry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="Trạng thái phương tiện"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorGray"
                    android:textSize="13.5dp" />

                <TextView
                    android:id="@+id/tvCarryState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="13dp"
                    android:layout_alignParentEnd="true"
                    android:text="3 xe"/>


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#cccdce"/>

            <RelativeLayout
                android:id="@+id/layoutTimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp">
                <Button
                    android:id="@+id/btnTimeLines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timelines"
                    android:textAllCaps="false"
                    android:layout_alignParentStart="true"/>
                <Button
                    android:id="@+id/btnCheckList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="CheckList"
                    android:textAllCaps="false"/>
            </RelativeLayout>





        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>