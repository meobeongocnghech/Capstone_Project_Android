<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center_vertical|fill_horizontal">
                <shape android:shape="rectangle"
                    android:tint="@color/switch_thumb_color">
                    <corners android:radius="40dp" />
                    <size android:width="40dp" />
                    <size android:height="40dp" />
                    <padding android:top="3dp"
                        android:bottom="3dp"
                        android:left="3dp"
                        android:right="3dp"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_other_post" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:gravity="center_vertical|fill_horizontal">
                <shape android:shape="rectangle"
                    android:tint="@color/switch_thumb_color">
                    <corners android:radius="40dp" />
                    <size android:width="40dp" />
                    <size android:height="40dp" />
                    <padding android:top="3dp"
                        android:bottom="3dp"
                        android:left="3dp"
                        android:right="3dp"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_location_point" />
            </item>
        </layer-list>
    </item>
</selector>
