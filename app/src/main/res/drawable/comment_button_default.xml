<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="2dp"
                android:color="@color/colorDefaultBackground" />

            <solid android:color="@android:color/transparent" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="80dp"
                android:top="10dp" />
        </shape>
    </item>
    <item>
        <bitmap android:gravity="center" android:src="@drawable/ic_comment" />
    </item>
</layer-list>
